<!DOCTYPE kpartgui>
<effect LC_NUMERIC="C" tag="mask_start" id="mask_start">
        <name>Mask: Alpha shapes</name>
        <description>Draws simple shapes into the alpha channel</description>
        <author>Marko Cebokli</author>

        <parameter type="fixed" name="filter" default="frei0r.alphaspot">
                <name>Position X</name>
        </parameter>

        <parameter type="list" name="filter.0" default="0" paramlist="0;0.38;0.62;1">
                <paramlistdisplay>Rectangle,Ellipse,Triangle,Diamond</paramlistdisplay>
                <name>Shape</name>
        </parameter>

        <parameter type="animated" name="filter.1" default="0.5" min="-500" max="1500" factor="1000">
                <name>Position X</name>
        </parameter>

        <parameter type="animated" name="filter.2" default="0.5" min="-500" max="1500" factor="1000">
                <name>Position Y</name>
        </parameter>

        <parameter type="animated" name="filter.3" default="0.1" min="0" max="1000" factor="1000">
                <name>Size X</name>
        </parameter>

        <parameter type="animated" name="filter.4" default="0.1" min="0" max="1000" factor="1000">
                <name>Size Y</name>
        </parameter>

        <parameter type="animated" name="filter.5" default="0.5" min="0" max="1000" factor="1000">
                <name>Tilt</name>
        </parameter>

        <parameter type="animated" name="filter.6" default="0.2" min="0" max="1000" factor="1000">
                <name>Transition width</name>
        </parameter>

        <parameter type="animated" name="filter.7" default="0" min="0" max="1000" factor="1000">
                <name>Min</name>
        </parameter>

        <parameter type="animated" name="filter.8" default="1" min="0" max="1000" factor="1000">
                <name>Max</name>
        </parameter>

        <parameter type="list" name="filter.9" default="0" paramlist="0;0.3;0.5;0.7;1">
                <paramlistdisplay>Write on clear,Max,Min,Add,Subtract</paramlistdisplay>
                <name>Operation</name>
        </parameter>

</effect>
